source 'https://rubygems.org'

ruby '3.2.1'

# Gem needed to load environment variables from .env file
gem 'dotenv'

# HTML parser
gem 'nokogiri'

# Download files from the web
gem 'down', '~> 5.0'

# This library provides debugging functionality to Ruby (MRI) 2.6 and later.
gem 'debug', '>= 1.0.0'

# Progress bar
gem 'ruby-progressbar'

# Spotify ruby gem
# https://github.com/guilhermesad/rspotify
gem 'rspotify'

# Apple music ruby gem
# https://github.com/yhirano55/apple_music
gem 'apple_music'
